<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    custom:cardElevation="3dp"
    custom:cardCornerRadius="2dp"
    android:background="@color/Samsung_blue_transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:src="@drawable/my_arrow"
            android:paddingLeft="-10dp"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp" />

        <com.tengchong.android.CircleLoadingView
            android:id="@+id/copy_loading"
            android:layout_width="@dimen/file_image_size_width"
            android:layout_height="@dimen/file_image_size_height"
            app:cl_circleRadius="43dp"
            app:cl_circleStrokeSize="5dp"
            app:cl_fillAnimationDuration="200"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1."
                android:id="@+id/copy_number"
                android:textSize="28sp"
                android:layout_weight="0.7"
                android:gravity="center_vertical|right"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="left|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/copy_number"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/copy_name"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/copy_user_and_time"
                    android:textSize="16sp"
                    android:paddingLeft="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3"
            android:id="@+id/copy_counter"
            android:layout_weight="1.5"
            android:gravity="center_vertical|right"
            android:textSize="28sp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/copy_type"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/copy_end_time"
                android:textColor="@color/my_color_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <com.sample.foo.simplewidget.Libraries.RoundImageView
                android:id="@+id/copy_picture_lock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lock_icon"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

